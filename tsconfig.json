{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist/types",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "plop": ["../../src/plop.d.ts"]
    }
  },
  "exclude": ["./node_modules/**", "./example/**", "./dist/**"]
}
